@using Shared.Core.Messages
@using Client.Core.Constants

@if (TempData[TempDataConstants.MESSAGE] != null)
{
    Message message = (Message)TempData[TempDataConstants.MESSAGE];

    switch (message.MessageType)
    {
        case MessageType.SUCCESS:
            <div class="notification">
                <div class="alert alert-success alert-dismissable" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <span class="fa fa-check-square"></span> @message.Text
                </div>
            </div>
            break;
        case MessageType.ERROR:
            <div class="notification">
                <div class="alert alert-danger alert-dismissable" role="alert">
                    <button type="button" class="close" data-dismiss="alert">
                        <span aria-hidden="true">&times;</span><span class="sr-only">Close</span>
                    </button>
                    <span class="fa fa-warning"></span> @message.Text
                </div>
            </div>
            break;
    }
}
