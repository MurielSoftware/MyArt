@model IEnumerable<Shared.Dtos.Exhibitions.ExhibitionDto>

@using Client.Core.HtmlHelpers
@using Shared.Core.Constants
@using PagedList.Mvc
@using Shared.I18n.Constants

<div id="@HtmlConstants.LIST_EXHIBITION">
    <table class="table table-hover">
        <thead>
            <tr role="row">
                <th class="th-icon"></th>
                <th>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_NAME)</th>
                <th>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_START)</th>
                <th>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_END)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><i class='@HtmlConstants.FA_IMAGE_EXHIBITION'></i></td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Start)</td>
                    <td>@Html.DisplayFor(modelItem => item.End)</td>
                </tr>
            }
        </tbody>
    </table>
</div>