@model PagedList.IPagedList<Shared.Dtos.Exhibitions.ExhibitionDto>

@using Client.Core.HtmlHelpers
@using Shared.Core.Constants
@using PagedList.Mvc
@using Shared.I18n.Constants


<div id="@HtmlConstants.PAGED_LIST_EXHIBITION">
    <div class="row">
        <table class="table table-hover">
            <thead>
                <tr role="row">
                    <th class="th-icon"></th>
                    <th>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_NAME)</th>
                    <th>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_START)</th>
                    <th>@Html.LocalizedDisplay(MessageKeyConstants.LABEL_END)</th>
                    <th class="th-administration-box"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
        {
                    <tr>
                        <td><i class='@HtmlConstants.FA_IMAGE_EXHIBITION'></i></td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Start)</td>
                        <td>@Html.DisplayFor(modelItem => item.End)</td>
                        <td>
                            @Html.LocalizedActionLink("<i class='fa fa-pencil-square-o'></i>", WebConstants.VIEW_DETAILS, WebConstants.CONTROLLER_EXHIBITION, new { id = item.Id }, new { title = MessageKeyConstants.LABEL_UPDATE })
                            @Html.DialogActionLink("<i class='fa fa-remove'></i>", HtmlConstants.DIALOG_CONFIRMATION, WebConstants.DIALOG_DELETE_CONFIRMATION, WebConstants.CONTROLLER_EXHIBITION, new { id = item.Id, messageResourceKey = MessageKeyConstants.DELETE_INFORMATION_MESSAGE, afterAction = WebConstants.VIEW_DELETE_CONFIRMED }, new { title = MessageKeyConstants.LABEL_DELETE })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (Model.PageCount > 1)
        {
            @*@Html.PagedListPager(Model, page => Url.Action(wEBConstants.VIEW_PAGED_LIST, new Shared.Core.Url.PageRouteValueDictionary(ViewBag.FilterDto, new Dictionary<string, object>() { { "page", page } })), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = HtmlConstants.PAGED_LIST_ROLE, LoadingElementId = "loading" }));*@
        }
    </div>
</div>
